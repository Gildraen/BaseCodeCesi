<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcorrectionmot"
    android:orientation="vertical"
    tools:context="fr.cesi.base.ui.orthographe.CorrectionMotFragment">


    <LinearLayout
        android:layout_width="@dimen/middle_page_width"
        android:layout_height="650dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/default_margin_button"
            android:gravity="center"
            android:background="@drawable/etiquette"
            tools:text="@string/WordToCorrect" />

        <TextView
            android:id="@+id/messerror2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/messageerreur2"
            android:textColor="@color/text_error"
            android:textAlignment="center"
            android:visibility="invisible"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/default_margin_button"
            android:hint="@string/correction"
            android:textSize="@dimen/textsize"
            android:background="@drawable/etiquette"
            android:textColor="@color/colorTextButton"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/textsize"
            android:layout_marginBottom="@dimen/default_margin_button"
            android:background="@drawable/etiquette"
            android:text="@string/validation"
            android:textAllCaps="false"
            android:textColor="@color/colorTextButton" />

    </LinearLayout>
</LinearLayout>
